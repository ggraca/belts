#!/usr/bin/env ruby
require 'thor'
require 'belts'

class BeltsCLI < Thor
  register(Belts::Initializer, "start", "start", "Starts the game")
  register(Belts::Generator, "new", "new NAME", "Generate a new project in the current directory with the given NAME")

  default_task :start
end

BeltsCLI.start
